        //- var socket = io.connect('http://localhost:3000');
        var socket = io.connect('https://solar-trackr.herokuapp.com/');
        socket.on('reading', function(coord) {
            if(typeof coord.lat !== 'float') coord.lat = parseFloat(coord.lat);
